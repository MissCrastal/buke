<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sdsmdg.bookshareapp.BSA">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.LoginActivity"
            android:label="Login"

            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="portrait"/>
        <activity
            android:name="com.sdsmdg.bookshareapp.BSA.ui.SearchResultsActivity"
            android:label="Search"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.SEARCHRESULTS" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.MainActivity"
            android:label="Campus Books"
            android:theme="@style/AppTheme.NoActionBar"

            android:windowSoftInputMode="adjustPan|adjustResize"
            android:screenOrientation="portrait"/>
        <activity android:name="com.sdsmdg.bookshareapp.BSA.ui.SignupActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name="com.sdsmdg.bookshareapp.BSA.ui.MyBooks"
            android:label="My Books"
            android:screenOrientation="portrait"/>
        <activity
            android:name="com.sdsmdg.bookshareapp.BSA.ui.MyBooks2"
            android:label="My Profile"
            android:screenOrientation="portrait"/>
        <activity
            android:name="com.sdsmdg.bookshareapp.BSA.ui.BookDetailsActivity"
            android:label="Book Details"
            android:screenOrientation="portrait"/>
        <activity
            android:name="com.sdsmdg.bookshareapp.BSA.ui.UserProfile"
            android:label="User Details"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".ui.MyProfile"
            android:excludeFromRecents="true"
            android:label="My Profile"
            android:launchMode="singleTop"
            android:screenOrientation="portrait"/>
        <activity android:name="com.sdsmdg.bookshareapp.BSA.ui.SplashScreen"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.EditProfileActivity"
            android:label="Edit your details"
            android:screenOrientation="portrait"
            android:parentActivityName="com.sdsmdg.bookshareapp.BSA.ui.MyProfile" />
        <activity
            android:name="com.sdsmdg.bookshareapp.BSA.ui.ChangePasswordActivity"
            android:label="Change Password"
            android:screenOrientation="portrait"/>
        <activity
            android:name="com.sdsmdg.bookshareapp.BSA.ui.GuestActivity"
            android:label="Campus Books"
            android:screenOrientation="portrait"/>
        <activity android:name="com.sdsmdg.bookshareapp.BSA.ui.UserSearchActivity"
            android:label="Search User"
            android:parentActivityName=".ui.MainActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".ui.GRLoginActivity"
            android:label="To-Read"
            >
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data
                    android:host="www.goodreads.com"
                    android:scheme="your" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.ToReadActivity"
            android:label="To-Read"/>
    </application>

</manifest>